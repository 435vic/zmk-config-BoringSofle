#include <dt-bindings/zmk/matrix_transform.h>

#include "boring_sofle-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &default_layout;
        zmk,kscan = &kscan;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <15>;
        rows = <5>;
//                                                          / nav switch
//                                                         \/
// |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |           |  A  |           |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |
// |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |           |  D  |           |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |
// |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |           |  C  |           |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |
// |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |           |  B  |           |  SW  |  SW  |  SW  |  SW  |  SW  |  SW  |
//               |  SW  |  SW  |  SW  |  SW  |  SW  |    | CTR |    |  SW  |  SW  |  SW  |  SW  |  SW  |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)         RC(1, 12)         RC(0,6) RC(0,7) RC(0,8)  RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)         RC(0, 12)         RC(1,6) RC(1,7) RC(1,8)  RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)         RC(4, 12)         RC(2,6) RC(2,7) RC(2,8)  RC(2,9) RC(2,10) RC(2,11)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)         RC(2, 12)         RC(3,6) RC(3,7) RC(3,8)  RC(3,9) RC(3,10) RC(3,11)
                RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(3, 12) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    encoder: {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder>;
        triggers-per-rotation = <20>;
    };

    nice_view_spi: &spi0 {
        compatible = "nordic,nrf-spim";
        pinctrl-0 = <&spi0_default>;
        pinctrl-1 = <&spi0_sleep>;
        pinctrl-names = "default", "sleep";
        cs-gpios = <&pro_micro 1 GPIO_ACTIVE_HIGH>;
    };
};
